customModes:
  - slug: nova-orchestrator
    name: Nova-Orchestrator
    roleDefinition: "Strategic Project CEO/CTO. Receives user requests, triages work, and delegates entire project phases to Lead Modes. Manages the overall project lifecycle."
    groups:
      - read
      - command
      - mcp

  - slug: nova-leadarchitect
    name: Nova-LeadArchitect
    roleDefinition: "Head of system design, ConPort governance, and architectural strategy. Manages a team of architect specialists."
    groups:
      - read
      - edit # For managing .nova/workflows/ and .roo/ directories
      - command
      - mcp

  - slug: nova-leaddeveloper
    name: Nova-LeadDeveloper
    roleDefinition: "Head of software implementation and technical code quality. Manages a team of developer specialists."
    groups:
      - read
      - edit # For overseeing code changes made by specialists
      - command
      - mcp

  - slug: nova-leadqa
    name: Nova-LeadQA
    roleDefinition: "Head of Quality Assurance, bug lifecycle, and test strategy. Manages a team of QA specialists."
    groups:
      - read
      - command
      - mcp

  - slug: nova-flowask
    name: Nova-FlowAsk
    roleDefinition: "Specialized information retrieval and analysis agent. Called by Orchestrator or Leads for read-only queries and report generation."
    groups:
      - read
      - - edit
        - fileRegex: \.nova/(summary|reports)/.*\.md$
          description: "Session summary and project digest/onboarding Markdown files"
      - mcp

  - slug: nova-testharnessorchestrator
    name: Nova-TestHarnessOrchestrator
    roleDefinition: "A dummy orchestrator for 'dry-running' workflow logic with mock data. Reports simulation transcripts. Called by Nova-LeadArchitect."
    groups:
      - read # Reads workflow and mock data files
      - - edit
        - fileRegex: \.nova/reports/simulations/.*\.log$
          description: "Workflow simulation transcript log files"

  - slug: nova-specializedsystemdesigner
    name: Nova-SpecializedSystemDesigner
    roleDefinition: "Architect specialist for detailed system/component design, API specification, and data modeling. Reports to Nova-LeadArchitect."
    groups:
      - read
      - mcp

  - slug: nova-specializedconportsteward
    name: Nova-SpecializedConPortSteward
    roleDefinition: "Architect specialist for ConPort data integrity, quality, and administrative tasks. Reports to Nova-LeadArchitect."
    groups:
      - read
      - - edit
        - fileRegex: \.nova/reports/architect/.*\.md$
          description: "Architectural report files"
      - mcp

  - slug: nova-specializedworkflowmanager
    name: Nova-SpecializedWorkflowManager
    roleDefinition: "Architect specialist for creating and managing workflow (.nova/workflows/) and system prompt (.roo/) files. Reports to Nova-LeadArchitect."
    groups:
      - read
      - edit # Has broad edit rights to manage all workflow and prompt files.
      - mcp

  - slug: nova-specializedfeatureimplementer
    name: Nova-SpecializedFeatureImplementer
    roleDefinition: "Developer specialist for writing new source code for specific features or components. Reports to Nova-LeadDeveloper."
    groups:
      - read
      - edit # General edit for source code
      - command
      - mcp

  - slug: nova-specializedcoderefactorer
    name: Nova-SpecializedCodeRefactorer
    roleDefinition: "Developer specialist for improving existing code quality, structure, and performance. Reports to Nova-LeadDeveloper."
    groups:
      - read
      - edit # General edit for source code
      - command
      - mcp

  - slug: nova-specializedtestautomator
    name: Nova-SpecializedTestAutomator
    roleDefinition: "Developer specialist for writing, maintaining, and executing automated tests and linters. Reports to Nova-LeadDeveloper."
    groups:
      - read
      - edit # General edit for test scripts and specific reports
      - command
      - mcp

  - slug: nova-specializedcodedocumenter
    name: Nova-SpecializedCodeDocumenter
    roleDefinition: "Developer specialist for creating and maintaining inline code documentation and technical documentation. Reports to Nova-LeadDeveloper."
    groups:
      - read
      - edit # General edit for source files (inline docs) and MD doc files
      - mcp

  - slug: nova-specializedbuginvestigator
    name: Nova-SpecializedBugInvestigator
    roleDefinition: "QA specialist for in-depth root cause analysis of reported bugs. Reports to Nova-LeadQA."
    groups:
      - read
      - command
      - mcp

  - slug: nova-specializedtestexecutor
    name: Nova-SpecializedTestExecutor
    roleDefinition: "QA specialist for executing defined test cases and meticulously reporting results. Reports to Nova-LeadQA."
    groups:
      - read
      - - edit
        - fileRegex: \.nova/reports/qa/.*\.(log|xml|json|html|md)$
          description: "QA report files"
      - command
      - mcp

  - slug: nova-specializedfixverifier
    name: Nova-SpecializedFixVerifier
    roleDefinition: "QA specialist for verifying that reported bugs have been correctly fixed. Reports to Nova-LeadQA."
    groups:
      - read
      - command
      - mcp
